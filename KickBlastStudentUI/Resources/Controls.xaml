<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="14"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="BorderBrush" Value="#E4E8F0"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style x:Key="SidebarStyle" TargetType="Border">
        <Setter Property="Background" Value="#1F2A44"/>
        <Setter Property="CornerRadius" Value="0,12,12,0"/>
    </Style>

    <Style x:Key="SidebarTitleTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,6,0,20"/>
    </Style>

    <Style x:Key="SidebarButtonStyle" TargetType="Button">
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Background" Value="#2B3A5A"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#2B3A5A"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>
</ResourceDictionary>
