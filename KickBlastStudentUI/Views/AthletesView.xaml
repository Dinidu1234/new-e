<UserControl x:Class="KickBlastStudentUI.Views.AthletesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions><ColumnDefinition Width="2*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBox Width="220" Margin="0,0,8,0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                    <ComboBox Width="160" ItemsSource="{Binding PlanFilters}" SelectedItem="{Binding SelectedPlanFilter}"/>
                </StackPanel>
                <DataGrid ItemsSource="{Binding AthletesView}" SelectedItem="{Binding SelectedAthlete}" AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Plan" Binding="{Binding TrainingPlan.Name}" Width="120"/>
                        <DataGridTextColumn Header="Weight" Binding="{Binding CurrentWeightKg}" Width="100"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding CompetitionCategoryKg}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Athlete Form" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock Text="Name"/><TextBox Text="{Binding NameInput, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="{Binding NameError}" Foreground="Red"/>
                <TextBlock Text="Plan" Margin="0,8,0,0"/><ComboBox ItemsSource="{Binding Plans}" SelectedItem="{Binding SelectedPlan}" DisplayMemberPath="Name"/>
                <TextBlock Text="Current Weight (kg)" Margin="0,8,0,0"/><TextBox Text="{Binding CurrentWeightInput, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="{Binding CurrentWeightError}" Foreground="Red"/>
                <TextBlock Text="Category Weight (kg)" Margin="0,8,0,0"/><TextBox Text="{Binding CategoryWeightInput, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="{Binding CategoryWeightError}" Foreground="Red"/>
                <WrapPanel Margin="0,12,0,0">
                    <Button Content="Add" Width="70" Margin="0,0,6,0" Command="{Binding AddCommand}" IsEnabled="{Binding IsValid}"/>
                    <Button Content="Update" Width="70" Margin="0,0,6,0" Command="{Binding UpdateCommand}" IsEnabled="{Binding IsValid}"/>
                    <Button Content="Delete" Width="70" Command="{Binding DeleteCommand}"/>
                </WrapPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
