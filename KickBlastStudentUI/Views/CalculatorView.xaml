<UserControl x:Class="KickBlastStudentUI.Views.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
        <Border Style="{StaticResource CardStyle}" Margin="0,0,12,0">
            <StackPanel>
                <TextBlock Text="Monthly Fee Calculator" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock Text="Athlete"/><ComboBox ItemsSource="{Binding Athletes}" SelectedItem="{Binding SelectedAthlete}" DisplayMemberPath="Name"/>
                <TextBlock Text="Competitions This Month" Margin="0,8,0,0"/><TextBox Text="{Binding CompetitionsCount, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Coaching Hours/Week (0 to 5)" Margin="0,8,0,0"/><TextBox Text="{Binding CoachingHoursPerWeek, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="{Binding BeginnerCompetitionNote}" Foreground="DarkOrange" Margin="0,8,0,0"/>
                <WrapPanel Margin="0,12,0,0">
                    <Button Content="Calculate" Width="100" Margin="0,0,8,0" Command="{Binding CalculateCommand}"/>
                    <Button Content="Save" Width="100" Command="{Binding SaveCommand}" IsEnabled="{Binding CanSave}"/>
                </WrapPanel>
            </StackPanel>
        </Border>
        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Output" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock Text="{Binding TrainingCostDisplay}"/>
                <TextBlock Text="{Binding CoachingCostDisplay}"/>
                <TextBlock Text="{Binding CompetitionCostDisplay}"/>
                <TextBlock Text="{Binding TotalCostDisplay}" FontSize="18" FontWeight="Bold" Margin="0,6,0,0"/>
                <TextBlock Text="{Binding WeightStatusDisplay}" Margin="0,8,0,0"/>
                <TextBlock Text="{Binding SecondSaturdayDisplay}" Margin="0,6,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
