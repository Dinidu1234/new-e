<Window x:Class="KickBlastStudentUI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KickBlast Login" Height="360" Width="420" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#F5F7FB">
        <Border Style="{StaticResource CardStyle}" Margin="24">
            <StackPanel>
                <TextBlock Text="KickBlast Judo" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Please login" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Username"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Password" Margin="0,12,0,0"/>
                <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,12,0,0"/>
                <Button Content="Login" Margin="0,14,0,0" Command="{Binding LoginCommand}" IsEnabled="{Binding CanLogin}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
