<UserControl x:Class="KickBlastStudentUI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource CardStyle}">
        <StackPanel>
            <TextBlock Text="Pricing Settings" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock Text="Beginner Weekly Fee"/><TextBox Text="{Binding BeginnerWeeklyFee, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Intermediate Weekly Fee" Margin="0,8,0,0"/><TextBox Text="{Binding IntermediateWeeklyFee, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Elite Weekly Fee" Margin="0,8,0,0"/><TextBox Text="{Binding EliteWeeklyFee, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Competition Fee" Margin="0,8,0,0"/><TextBox Text="{Binding CompetitionFee, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Coaching Hourly Rate" Margin="0,8,0,0"/><TextBox Text="{Binding CoachingHourlyRate, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Save Pricing" Width="130" Margin="0,14,0,0" Command="{Binding SavePricingCommand}"/>
        </StackPanel>
    </Border>
</UserControl>
